<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="simpleText">
        <item name="android:maxLength">25</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/_7sdp</item>
        <item name="android:paddingBottom">@dimen/_7sdp</item>
        <item name="paddingStart">@dimen/_7sdp</item>
        <item name="paddingEnd">@dimen/_7sdp</item>
        <item name="background">@drawable/editview_white_underline</item>
        <item name="maxLines">1</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>
